{
  "name": "Gauge reader",
  "version": "0.7",
  "stage": "experimental",
  "slug": "gauge_reader",
  "description": "Read the value from pictures of a gauge meter using OpenCV computer vision libraries, into a Home Assistant sensor entity.",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "options": {
    "screenshot_dir":"/media/espcam_02",
    "cal_x": 410,
    "cal_y": 240,
    "cal_r": 83,
    "cal_min_angle": 60,
    "cal_max_angle": 320,
    "cal_min_value": 0,
    "cal_max_value": 4
  },
  "schema": {
    "screenshot_dir":"str",
    "cal_x": "int",
    "cal_y": "int",
    "cal_r": "int",
    "cal_min_angle": "int",
    "cal_max_angle": "int",
    "cal_min_value": "int",
    "cal_max_value": "int"
  },
  "map": ["media:rw"],
  "homeassistant_api": true,
  "environment": {
    "OPENCV_LOG_LEVEL": "e"
  }
}
