{
  "name": "Gauge reader",
  "version": "0.9",
  "stage": "experimental",
  "slug": "gauge_reader",
  "description": "Read the value from pictures of a gauge meter using OpenCV computer vision libraries, into a Home Assistant sensor entity",
  "panel_icon": "mdi::gauge",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "options": {
    "input_dir":"/media/espcam_02",
    "center": "405,242",
    "radius": 83,
    "angle": "58,322",
    "value": "0,4",
    "threshold": 95,
    "line_bounds": "0,40,70,110"
  },
  "schema": {
    "input_dir":"str",
    "center": "str",
    "radius": "int",
    "angle": "str",
    "value": "str",
    "threshold": "int",
    "line_bounds": "str"
  },
  "map": ["media:rw"],
  "homeassistant_api": true,
  "environment": {
    "OPENCV_LOG_LEVEL": "e"
  }
}
